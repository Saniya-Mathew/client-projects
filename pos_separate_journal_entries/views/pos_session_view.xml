<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_session_form_inherit_backfill_button" model="ir.ui.view">
        <field name="name">pos.session.form.inherit.backfill.button</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
        <field name="arch" type="xml">

            <xpath expr="//header/button[@name='open_frontend_cb']" position="after">
                <button name="action_backfill_order_partners"
                        type="object"
                        string="Backfill Partners"
                        class="oe_highlight"
                        groups="base.group_system"/>
            </xpath>
            <xpath expr="//header/button[@name='open_frontend_cb']" position="after">
                <button name="action_fix_partner_2250"
                    type="object"
                    string="Fix Partner"
                    class="oe_highlight"
                    help="Split combined journal entries into per-order entries"/>
            </xpath>
        </field>
    </record>
</odoo>
