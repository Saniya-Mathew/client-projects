<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 80mm Thermal Paper Format -->
        <record id="paperformat_80mm_thermal" model="report.paperformat">
            <field name="name">80mm Thermal Paper</field>
            <field name="default" eval="False"/>
            <field name="format">custom</field>
            <field name="page_height">0</field>
            <field name="page_width">80</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">203</field>
        </record>

        <!-- POS Order 80 Print Action -->
        <record id="action_report_pos_order_80" model="ir.actions.report">
            <field name="name">POS Order 80</field>
            <field name="model">pos.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">pos_thermal_print_80.report_pos_order_80</field>
            <field name="report_file">pos_thermal_print_80.report_pos_order_80</field>
            <field name="binding_model_id" ref="point_of_sale.model_pos_order"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_80mm_thermal"/>
        </record>
    </data>
</odoo>
